{
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": ["mocha"],
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "object-curly-spacing": [2, "always"],
    "mocha/no-exclusive-tests": "error",
    "max-len": [
      "error",
      {
        "code": 160
      }
    ]
  }
}
